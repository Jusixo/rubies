<%= form_for(@stone, html: { class: "form-horizontal", role: "form" }) do |f| %>

  <%# Alert showing errors for this form %>
  <% if @stone.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@stone.errors.count, "error") %> prohibited this stone from being saved:</h4>

      <ul>
      <% @stone.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%# kind %>
  <div class="form-group">
    <%= f.label :kind, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :kind, class: "form-control" %>
    </div>
  </div>


  <%# rarity %>
  <div class="form-group">
    <%= f.label :rarity, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :rarity, class: "form-control" %>
    </div>
  </div>


  <%# Submit %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end -%>
